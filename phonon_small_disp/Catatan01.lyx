\begin_layout Standard
Energi potensial 
\begin_inset Formula $\Phi$
\end_inset

 dari kristal diasumsikan merupakan fungsi analitik dari perpindahan atom,
 dan dapat diekspansi sebagai
\begin_inset Formula 
\[
\Phi=\Phi_{0}+\sum_{l\kappa}\sum_{\alpha}\Phi_{\alpha}(l\kappa)u_{\alpha}(l\kappa)+\frac{1}{2}\sum_{ll'\kappa\kappa'}\Phi_{\alpha\beta}(l\kappa,l'\kappa')u_{\alpha}(l\kappa)u_{\beta}(l'\kappa')+\frac{1}{3!}\sum_{ll'l''\kappa\kappa'\kappa''}\sum_{\alpha\beta\gamma}\cdots
\]

\end_inset

di mana 
\begin_inset Formula $\alpha,\beta,\cdots$
\end_inset

 adalah indeks Cartesian.
 
\begin_inset Formula $\Phi_{0}$
\end_inset

,
\begin_inset Formula $\Phi_{\alpha}(l\kappa)$
\end_inset

,
 
\begin_inset Formula $\Phi_{\alpha\beta}(l\kappa,l'\kappa')$
\end_inset

,
 dst adalah konstanta gaya orde-0,
 orde-1,
 orde-2 dan seterusnya.
\end_layout

\begin_layout Standard
Dengan gaya 
\begin_inset Formula $F_{\alpha}(l\kappa)=-\dfrac{\partial\Phi}{\partial u_{\alpha}(l\kappa)}$
\end_inset

,
 elemen dari konstanta gaya orde-2:
\begin_inset Formula 
\[
\frac{\partial^{2}\Phi}{\partial u_{\alpha}(l\kappa)\partial u_{\beta}(l'\kappa')}=-\frac{\partial F_{\beta}(l'\kappa')}{\partial u_{\alpha}(l\kappa)}
\]

\end_inset


\end_layout

